<Window x:Class="WPF_Zad_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Zad_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ListBox Name="Lista" SelectionChanged="Lista_SelectionChanged" />
        </Grid>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="Add_Movie">Dodaj</Button>
            <Button Grid.Column="1" Name="b1" Click="Edit_Movie">Edytuj</Button>
            <Button Grid.Column="2" Name="b2" Click="Delete_Movie">Usuń</Button>
            <Button Grid.Column="3" Name="b3" Click="Show_Movie">Podgląd</Button>

        </Grid>

    </Grid>
  
</Window>
